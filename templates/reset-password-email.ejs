<%- include('./includes/header.ejs') %>

<div style="text-align: center; margin-top: 20px; margin-bottom: 42px; font-family: 'Roboto', sans-serif">
    <p style="margin-bottom: 39px; margin-top: 0; font-size: 18px; line-height: 21.09px; font-weight: 400; color: #000000;">
        <%= greetingText %>
    </p>
    <p style="max-width: 543px; margin: 0 auto; font-size: 18px; line-height: 26px; font-weight: 400; color: #000000;">
        <%= messageText %>
    </p>
    <% if (href) { %>
        <a href="<%= href %>" style="display: inline-block; margin: 65px auto;   text-align: center; padding: 17px 80px; background-color: #EB7005; color: #FCFCFC; text-decoration: none; border-radius: 8px; font-weight: 800; font-size: 18px; line-height: 21.6px; box-shadow: 0px 1px 2px 0px #794B230F, 0px 1px 3px 0px #794B231A;">
            <%= buttonText %>
        </a>
    <% } %>
    <p style="max-width: 543px; margin: 0 auto; font-size: 18px; line-height: 26px; font-weight: 400; color: #000000;">
        <%= endText %>
    </p>
</div>

<%- include('./includes/footer.ejs') %>

